@{
    ViewData["Title"] = "Top Stories";
}
@model List<ForumPost>
<br />
<section class="text-center">
    <h1>@ViewData["Title"]:</h1>
</section>
<hr />
<article class="text-center">
    <a class="btn btn-outline-light" asp-area="" asp-controller="Forum" asp-action="ForumPostForm">Create a forum post</a>
</article>
<article class="container-fluid mt-3">
    <div class="mt-md-3 text-center row d-flex justify-content-center">
            @if (Model.Count != 0)
            {
                foreach (ForumPost forumPost in Model)
                {
                    <div class="bg-dark-subtle col col-md-8"><!--Forum post should only stretch to full width on smaller screens.-->
                        <h3>@forumPost.ForumTitle</h3>
                        <p>@forumPost.ForumDescription</p>
                        <p>Year this story took place: @forumPost.ForumYear</p>
                        <hr />
                        <p>@forumPost.ForumText</p>
                        <hr />
                        <p class="text-start float-start">Author: @forumPost.ForumUser.Name &nbsp;</p>
                        <p class="text-sm-start text-start float-start float-sm-end">Posted on: @forumPost.ForumDate.Date.ToShortDateString()</p><!--Text should float to left and right sides except on small screens.-->
                    </div>
                }
            }
            else
            {
                <p class="text-danger">There are no forum posts.</p>
            }
    </div>
    <!--div class="spinner-border" role="status">
        <span class="visually-hidden"></span>
    </div-->
</article>
